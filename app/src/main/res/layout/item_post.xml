<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_picture_thread"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_number_and_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toRightOf="@id/iv_picture_thread"
            android:text="No. 11585394, 09/12/18 Вск 08:12:07"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_picture_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_number_and_date"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@id/iv_picture_thread"
            android:text="91x194_301[1].jpg JPG 25.1 Kib 425x500"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_number_and_date"
            android:layout_marginStart="12dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/iv_picture_thread"
            android:text="@string/test_text" />

        <Button
            android:id="@+id/btn_reply"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/tv_description"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="3 replies"
            android:textSize="10sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/btn_reply"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp"
            android:background="@color/colorAccent" />
    </RelativeLayout>
</android.support.v7.widget.CardView>