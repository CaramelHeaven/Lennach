<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="22dp"
    android:background="@drawable/fragment_dialog_rounded">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_container_image"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="18dp"
        android:background="#fef8f7"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/iv_captcha_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_container"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_container_image"
        android:layout_marginStart="26dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="12dp"
        android:focusableInTouchMode="true"
        android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_captcha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/unravel_picture"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/colorTextDark"
            android:textColorHint="@color/colorTextGray" />
    </android.support.design.widget.TextInputLayout>
</RelativeLayout>