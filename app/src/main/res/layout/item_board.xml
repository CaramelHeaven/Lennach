<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivThread"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/ivThread"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Virtual Reality as a Possibility Space lalala"
            android:textColor="@color/colorSecondaryDark"
            android:textSize="@dimen/normal" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/ivThread"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="@string/test_text"
            android:textSize="12sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ivThread"
            android:layout_marginTop="4dp"
            android:background="@color/colorTextGrayLight" />

        <ImageView
            android:id="@+id/ivPostsAll"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/view"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_post_all" />

        <TextView
            android:id="@+id/tvCountPosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ivPostsAll"
            android:text="49"
            android:textColor="@color/colorSecondaryDark"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivFilesAll"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/view"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/tvCountPosts"
            android:src="@drawable/ic_files_all" />

        <TextView
            android:id="@+id/tvCountFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ivFilesAll"
            android:text="45"
            android:textColor="@color/colorSecondaryDark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/view"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:text="lalala"
            android:textColor="@color/colorSecondaryDark"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>